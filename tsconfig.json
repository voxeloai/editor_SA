{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2020",
        "moduleResolution": "bundler",

        "lib": ["es2022", "dom", "WebWorker"],
        "sourceMap": true,
        "noImplicitAny": true,
        "inlineSources": true,

        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleDetection": "force"
    },
    "include": [
        "./src/**/*.ts",
        "global.d.ts",
        "vite.config.mts"
    ],
    "exclude": [
        "src/debug.ts", // Testing file
        "dist",
        "node_modules"
    ]
}
